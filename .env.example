# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
ENVIRONMENT=development
LOG_LEVEL=info

# Odoo Configuration
ODOO_URL=https://your-odoo-instance.com
ODOO_DATABASE=your_database

# Autenticaci칩n con API Key (RECOMENDADO - m치s seguro)
ODOO_API_KEY=your_api_key_here

# Autenticaci칩n con Usuario/Contrase침a (LEGACY - solo si no tienes API Key)
ODOO_USERNAME=admin
ODOO_PASSWORD=your_password

# Quickpass Configuration
QUICKPASS_URL=https://api.quickpass.com
QUICKPASS_API_KEY=your_quickpass_api_key
QUICKPASS_API_SECRET=your_quickpass_secret
QUICKPASS_TIMEOUT=30

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY=your-internal-api-key-for-webhooks

# Sync Configuration
SYNC_INTERVAL=300 # seconds
MAX_RETRIES=3
RETRY_DELAY=5 # seconds

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-token

# Feature Flags
ENABLE_EMPLOYEE_SYNC=true
ENABLE_PAYROLL_SYNC=true
ENABLE_ATTENDANCE_SYNC=true
ENABLE_TIMEOFF_SYNC=true
